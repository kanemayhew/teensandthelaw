<script>
    var selectedAnswer = "";

    function selectAnswer(id) {
        selectedAnswer = id;
        var options = document.querySelectorAll('.button');
        options.forEach(option => option.style.border = '1px solid #ccc'); // Reset borders
        document.getElementById(id).style.border = '2px solid blue'; // Highlight selected button
    }

    function placeAnswer(targetId) {
        if (selectedAnswer === "") {
            alert("Please select an answer first.");
            return;
        }

        var element = document.getElementById(selectedAnswer);
        var target = document.getElementById(targetId);

        if (checkAnswer(targetId, selectedAnswer)) {
            target.innerHTML = element.innerHTML;
            target.className = "correct";
        } else {
            target.innerHTML = element.innerHTML;
            target.className = "incorrect";
        }

        // Deselect answer after placing
        selectedAnswer = "";
        var options = document.querySelectorAll('.button');
        options.forEach(option => option.style.border = '1px solid #ccc'); // Reset borders
    }

    function checkAnswer(targetId, answerId) {
        const correctAnswers = {
            c1: "d1",
            c2: "d1",
            c3: "d2",
            c4: "d3",
            c5: "d4",
            c6: "d5",
            c7: "d6",
            c8: "d7",
            c9: "d6",
            c10: "d7",
            c11: "d8",
            c12: "d9",
            c13: "d10",
            c14: "d11",
            c15: "d12",
            c16: "d13",
            c17: "d14",
            c18: "d15",
            c19: "d16",
            c20: "d17",
            c21: "d18",
            c22: "d19",
            c23: "d20",
            c24: "d21"
        };
        return correctAnswers[targetId] === answerId;
    }
</script>

